<% products.forEach(product => { %>
    <div class="col-lg-3 col-md-4 col-6 my-2 ">
        <div class="card card-product">
            <div>
                <img src="/static/images/products-images/<%= product.imgUrl %>"  class="img img-fluid rounded" alt="">
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description.substring(0,12) + '...' %></p>
                <span><%= product.price %> AZN</span>
            </div>
            <div class="card-end d-flex">
                <a class="btn btn-small border-0 bg-info m-1 mb-1 mt-md-31 py-0 my-0 px-1 card-info-btn" href="/products/<%= product.id %>">HaqqÄ±nda</a>
                <div class="ms-auto ">
                    <button class="bg-white p-0  border-0 mx-md-3 card-basket"><i class="bi bi-cart-fill" onclick="isActiveBasket(this)"></i></button>
                    <button class=" bg-white p-0 border-0  me-2 card-heart" onclick="isActiveHeart(this)" > <i class="bi bi-heart-fill"></i></button>
                </div>
            </div>
        </div>
    </div>
<% }) %>