<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
</head>

<body>
    
    <!-- Navbar -->
    <%- include("../partials/nav.ejs") %>

    <div class="container container-basket">
            <% products.forEach(product => { %>
                <div class="border rounded p-1 mt-5 bg-light all-basket">
                    <div class="row m-1 p-3 border rounded bg-white">
                        <div class="col-3 col-md-2 my-auto">
                            <img class="img img-fluid basket-img px-0" src="/static/images/products-images/<%= product.imgUrl %>" alt="">
                        </div>
                        <div class="col my-auto"><%= product.name %></div>
                        <div class="col-2 col-md-1 my-auto">
                            <button class="btn btn-danger basket-btn-delete py-0" id="basket_delete_<%= product.id %>">Sil</button>
                        </div>
                    </div>
                        
                    <div class="row mt-2 text-center">
                        <div class="col">
                                <%= product.name %> : 
                                <button class="btn border basket-btn-subtract bg-white" id="basket_subtract_<%= product.id %>">-</button>
                                <input class="btn border basket-inp-value bg-white" type="button" name="product-count" id="basket_inp_<%= product.id %>" value="1">
                                <button class="btn border basket-btn-plus bg-white" id="basket_plus_<%= product.id %>">+</button>
                        </div>
                        <div class="col-4  my-auto basket-product-totally-price" >
                            <span id="basket_totally_<%= product.id %>"><%= product.price %></span> AZN
                        </div>
                    </div>
                </div>
            <% }) %>

        <div class="row mt-5 ">
            <form method="post" class="form form-control mt-3 bg-light">
                <input type="text" name="" id="" value="" hidden>
                <div class="col text-center">
                    <div class="col mt-2">Ümumi Qiymət</div>
                    <div class="col my-2"><span class="all-product-price">0</span> AZN</div>
                    <div class="col mb-2"><button class="btn btn-success py-0">Sifarişi təsdiqlə</button></div>
                </div>
            </form>
        </div>
    </div>

    

    
    <!-- Bootstrap Js  -->
    <script src="/libr/bootstrap/dist/css/bootstrap.min.css"></script>

    <!-- JavaScript  -->
    <script src="/static/javaScript/index.js"></script>
</body>
</html>