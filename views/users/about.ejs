<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
</head>

<body>
    
    <!-- Navbar --> 
    <%- include("../partials/nav.ejs") %>

    <div class="container">
        
        <% products.forEach(product => { %>
            <% if (product.id == productid) { %>
        <div class="row mt-5">
            <div class="col-6 col-md-3 col-lg-2 col-sm-4">
                <img src="/static/images/products-images/<%= product.imgUrl %>"  class="img img-fluid about-img" alt="">
            </div>
            <div class="col-6 col-md-9 col-lg-10 col-sm-8 border rounded border-bottom-0  rounded-end-0 ">
                <h3><%= product.name %></h3>
                <p class="my-2 about-first-p"><%=product.description %> <%= product.gender %> üçündür.</p>
            </div>

            <div class="col border rounded border-top-0 rounded-end-0 pt-0">
                <p class="about-second-p"></p>
            </div>
        </div>
        <div class="row mt-3  d-flex justify-content-center">
            <div class="col d-flex justify-content-between border rounded d-flex mt-3 about-footer-card">
                <p class="about-price mt-2">Qiyməti: <%= product.price %> AZN</p>
                <button class="border-0 bg-white about-basket p-0" onclick="isActiveBasketAbout(this)"><i class="bi bi-cart-fill"></i></button>
                <button class="border-0 bg-white  about-heart p-0" onclick="isActiveHeartAbout(this)"> <i class="bi bi-heart-fill"></i></button>
            </div>
        </div>
        <div class="row mt-3 mx-auto about-comment">
            <div class="col-12 mt-5 text-center">
                <span class="about_comment_title">Şərhlər</spa>
            </div>
            <div class="col-12 mt-5">
                    <form method="post" class="form form-control">
                        <div>
                            <label for="user_comment">Username</label>
                            <input type="text" name="user_comment" id="user_comment" class="form-control my-1">
                        </div>
                        <div class="text-end">
                            <button class="btn btn-success btn-sm py-0" type="submit">Əlavə et</button>
                        </div>
                    </form>
            </div>
            <div class="col-12 mt-5 border rounded p-2 bg-light">
                <div class="_comment  border rounded p-2 bg-white">
                    <label for="other_user_comment">Username</label>
                    <p class="form-control" name="other_user_comment" id="other_user_comment" >user_product_comment</p>
                    <div>
                        <i class="bi bi-hand-thumbs-up m-1 about-comment-like"></i><span class="me-2 about-comment-like-count">0</span>
                        <i class="bi bi-hand-thumbs-down m-1 about-comment-dislike"></i><span class="about-comment-dislike-count" >0</span>
                    </div>
                </div>
            </div>

        </div>
            <% } %>
        <% }) %>
        
    </div>

    

    
    <!-- Bootstrap Js  -->
    <script src="/libr/bootstrap/dist/css/bootstrap.min.css"></script>

    <!-- JavaScript  -->
    <script src="/static/javaScript/index.js"></script>
</body>
</html>